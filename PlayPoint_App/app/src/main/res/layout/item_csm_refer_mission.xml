<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_weight="1.6"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="#5E4B97"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:id="@+id/click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_csm_home_btn">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_csm_ovel_3d"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="-18dp"
            android:layout_marginBottom="-18dp"/>

        <ImageView
            android:id="@+id/gift"
            android:layout_width="60dp"
            android:layout_marginLeft="10dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            app:riv_corner_radius="5dp"
            android:src="@drawable/ic_csm_person_add" />

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/gift"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/main_one"
                android:text="Invite 10 friends"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical">


                    <ImageView
                        android:layout_width="15.60dp"
                        android:layout_height="15.60dp"
                        android:src="@drawable/ic_csm_person_add" />

                    <TextView
                        android:id="@+id/left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="-0dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/main_two"
                        android:text="0/10 Invited"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_status"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:background="@drawable/bg_csm_pending"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="-.9dp"
                        android:fontFamily="@font/main_two"
                        android:text="claim coins"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="8dp" />


                </LinearLayout>



            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4.8dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="6dp"
                android:max="500"
                android:progress="500"
                android:progressDrawable="@drawable/progress_csm_golden" />

        </LinearLayout>





        <LinearLayout
            android:layout_marginTop="-12dp"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/coinbar"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="-15dp"
                    android:layout_toEndOf="@+id/img_coin"
                    android:background="@drawable/bg_csm_coinbar_refer">

                    <TextView
                        android:id="@+id/coins"
                        android:layout_marginTop="-6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="12dp"
                        android:fontFamily="@font/main_two"
                        android:text="1000"
                        android:textColor="@color/white"
                        android:textSize="12dp" />


                </RelativeLayout>


                <ImageView
                    android:id="@+id/img_coin"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/csm_coin" />


            </RelativeLayout>


        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>