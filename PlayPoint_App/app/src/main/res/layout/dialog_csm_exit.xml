<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="309dp"
    android:layout_height="226dp"
    android:background="@drawable/bg_csm_exit">

    <TextView
        android:id="@+id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/main_two"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:gravity="center"
        android:text="Are you sure do you want to exit this\napp?"
        android:layout_marginTop="95dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/yes"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_csm_exit"
            android:layout_marginVertical="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="EXIT!"
                android:fontFamily="@font/main_one"
                android:textColor="@color/white"
                android:textSize="18dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/no"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_csm_cancel"
            android:layout_marginVertical="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="cancel"
                android:textAllCaps="true"
                android:fontFamily="@font/main_one"
                android:textColor="@color/white"
                android:textSize="18dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>




