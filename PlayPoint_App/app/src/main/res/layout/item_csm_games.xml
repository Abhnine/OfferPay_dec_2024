<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginTop="10dp"
    android:layout_weight="1.6"
    app:cardBackgroundColor="#5E4B97"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:id="@+id/click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_csm_home_btn">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image"
            android:layout_width="60dp"
            android:layout_marginLeft="8dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            app:riv_corner_radius="6dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/main_one"
                android:text="csm king game"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="22dp" />


            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/main_two"
                android:text="Play this game &amp; get 10 coins"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="9dp" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/coinbar"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="-15dp"
                        android:layout_toEndOf="@+id/img_coin"
                        android:background="@drawable/bg_csm_game_coinbar">

                        <TextView
                            android:id="@+id/coins"
                            android:layout_marginTop="-6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="7dp"
                            android:fontFamily="@font/main_two"
                            android:text="500"
                            android:textColor="@color/white"
                            android:textSize="11dp" />


                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/img_coin"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/csm_coin" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical">


                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/ic_csm_clock" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="-0dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/main_two"
                        android:text="8 MIN"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_game_act" />





        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/main_one"
            android:text="PLAY"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="23dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>