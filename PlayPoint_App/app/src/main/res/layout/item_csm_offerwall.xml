<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginTop="10dp"
    android:layout_weight="1.6"
    app:cardBackgroundColor="#5E4B97"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:id="@+id/click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_csm_home_btn">


        <ImageView
            android:id="@+id/image"
            android:layout_width="60dp"
            android:layout_marginLeft="8dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            app:riv_corner_radius="6dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/main_one"
                android:text="Offerwall"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/main_two"
                android:text="earn from doing simple offers"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="9dp" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_marginRight="-35dp"
                android:layout_marginTop="-35dp"
                android:layout_marginBottom="-10sp"
                android:layout_width="124dp"
                android:layout_height="119dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_csm_ovel_14" />





        </RelativeLayout>


        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/coinbar"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="-15dp"
                    android:layout_toEndOf="@+id/img_coin"
                    android:background="@drawable/bg_csm_game_coinbar">

                    <TextView
                        android:id="@+id/coins"
                        android:layout_marginTop="-6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="21dp"
                        android:layout_marginRight="13dp"
                        android:fontFamily="@font/main_two"
                        android:text="50k"
                        android:textColor="@color/white"
                        android:textSize="11dp" />


                </RelativeLayout>


                <ImageView
                    android:id="@+id/img_coin"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/csm_coin" />


            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_csm_ovel_14"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="-10dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>