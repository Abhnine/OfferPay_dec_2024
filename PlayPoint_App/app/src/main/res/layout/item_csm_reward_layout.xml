<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="#363B45"
    app:cardCornerRadius="6dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_csm_home_btn">


        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_csm_ovel_3d"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="-18dp"
            android:layout_marginBottom="-18dp"/>

        <LinearLayout
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:orientation="horizontal" />


        <ImageView
            android:id="@+id/img"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/ic_launcher" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/black"
                android:gravity="center"
                android:text="Claim"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@drawable/csm_offer_reward_back"
                android:gravity="center"
                android:paddingHorizontal="8dp">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/csm_coin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/black"
                    android:text="2500"
                    android:textColor="@color/white"
                    android:textSize="13dp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="10dp"
            android:id="@+id/second_layout"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:layout_toStartOf="@+id/open"
            android:layout_toEndOf="@+id/img"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/main_one"
                android:maxLines="1"
                android:text="Paytm cash"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rupee"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/csm_coin" />

                <TextView
                    android:id="@+id/points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="-1dp"
                    android:fontFamily="@font/main_two"
                    android:text="1000 coins need!"
                    android:textColor="#F6F3FF"
                    android:textSize="11sp" />


            </LinearLayout>


            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="7dp"
                android:max="500"
                android:progress="350"
                android:progressDrawable="@drawable/progress_csm_golden" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="6dp"
            android:layout_marginBottom="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_csm_redeem"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/open"
            android:orientation="horizontal" />

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/csm_ic_lock"
            android:layout_alignParentRight="true"
            app:tint="@color/white" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>