<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="10dp"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="98dp"
    app:cardBackgroundColor="#5A4597"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:id="@+id/click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_csm_home_btn">

        <ImageView
            android:id="@+id/image"
            android:layout_width="57dp"
            android:layout_height="59dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unity video"
            android:textAllCaps="true"
            android:fontFamily="@font/main_one"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_csm_videos"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-8dp"
            android:layout_marginTop="-12dp"/>

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="-3dp"
            android:layout_width="60dp"
            android:layout_height="20dp">

            <LinearLayout
                android:id="@+id/coinbar_v"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:layout_width="44dp"
                android:background="@drawable/bg_csm_videos_coinbar"
                android:layout_height="18dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/coins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50k"
                    android:textColor="#6B450D"
                    android:layout_marginLeft="13dp"
                    android:textSize="11dp"
                    android:layout_marginTop="-1.8dp"
                    android:fontFamily="@font/main_two"/>

            </LinearLayout>

            <ImageView
                android:layout_toStartOf="@id/coinbar_v"
                android:layout_width="18dp"
                android:layout_marginRight="-10dp"
                android:layout_height="18dp"
                android:src="@drawable/csm_coin"/>

        </RelativeLayout>







    </RelativeLayout>

</androidx.cardview.widget.CardView>