<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC1D1241">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_csm_reward_dialog"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="15dp">

        <RelativeLayout
            android:layout_width="313dp"
            android:layout_height="72dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_csm_bottom_round">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/ic_launcher" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/csm_coin" />

                <TextView
                    android:id="@+id/coins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/main_one"
                    android:text="10000 COINS"
                    android:textColor="@color/white"
                    android:textSize="18sp" />


            </LinearLayout>


        </RelativeLayout>

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="286dp"
            android:layout_height="43dp"
            android:layout_marginHorizontal="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_back"
            android:fontFamily="@font/main_two"
            android:hint="ENTER PAYTM NUMBER"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:textColorHint="#6FFFFFFF"
            android:textSize="12dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/csm_coin" />

            <TextView
                android:id="@+id/value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/main_one"
                android:text="10000 COINS = "
                android:textColor="@color/white"
                android:textSize="22sp" />


            <TextView
                android:id="@+id/value2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/main_one"
                android:text="$10"
                android:textColor="#FBB216"
                android:textSize="22sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="9dp"
            android:layout_marginTop="5dp"
            android:background="#9925184E"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/main_one"
                android:text="NOTE:"
                android:textColor="#FF2F2F"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/main_two"
                android:lineSpacingExtra="-2dp"
                android:text="Please enter your working details before enter check your details carefully."
                android:textColor="@color/white"
                android:textSize="10dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_text"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="17dp">

            <LinearLayout
                android:id="@+id/redeem"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="4dp"
                android:layout_weight="2"
                android:background="@drawable/csm_claim_btn_yellow">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/main_one"
                    android:gravity="center"
                    android:text="redeem"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/close"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="2"
                android:background="@drawable/csm_reward_dialog_btn">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/main_one"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>