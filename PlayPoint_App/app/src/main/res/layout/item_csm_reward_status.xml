<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="#5A4597"
    android:layout_marginHorizontal="10dp"
    android:paddingVertical="0dp">

    <RelativeLayout
        android:background="@drawable/btn_csm_home_btn_2nd"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_csm_reward_status"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paytm Cash request"
                android:fontFamily="@font/main_one"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20-5-2002"
                    android:fontFamily="@font/main_two"
                    android:textColor="@color/white"
                    android:textSize="10sp"/>
                <LinearLayout
                    android:id="@+id/pending"
                    android:layout_marginLeft="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:background="@drawable/bg_csm_pending"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="-.9dp"
                        android:fontFamily="@font/main_two"
                        android:text="Pending"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="8dp" />


                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/csm_approved"
                    android:layout_marginLeft="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:background="@drawable/bg_csm_approved"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="-.9dp"
                        android:fontFamily="@font/main_two"
                        android:text="Approved"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="8dp" />


                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/completed"
                    android:layout_marginLeft="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:background="@drawable/bg_csm_complete"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="6dp"
                        android:layout_marginTop="-.9dp"
                        android:fontFamily="@font/main_two"
                        android:text="completed"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="8dp" />


                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/rejected"
                    android:layout_marginLeft="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:background="@drawable/bg_csm_rejected"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="-.9dp"
                        android:fontFamily="@font/main_two"
                        android:text="rejected"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="8dp" />


                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-50dp">

            <ImageView
                android:layout_marginBottom="-20dp"
                android:layout_marginTop="-20dp"
                android:layout_width="119dp"
                android:layout_height="119dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_csm_ovel_14" />

            <LinearLayout
                android:layout_marginStart="7dp"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center">
                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-1dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/main_one"
                    android:text="$1000"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

            </LinearLayout>



        </RelativeLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>
