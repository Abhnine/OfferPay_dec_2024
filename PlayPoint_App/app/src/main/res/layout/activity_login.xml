<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adProgress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_csm_login" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logoo"
            app:riv_border_color="@color/white"
            app:riv_border_width="3dp"
            app:riv_corner_radius="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/csm_firstTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/main_one"
                    android:text="C"
                    android:textAllCaps="true"
                    android:textColor="#FBB216"
                    android:textSize="44dp" />

                <TextView
                    android:id="@+id/csmName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/main_one"
                    android:text="sm"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="44dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="38dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rEmail"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60.7dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_csm_btn_white"
            android:focusable="true">

            <LinearLayout
                android:layout_marginTop="2.5dp"
                android:layout_marginHorizontal="1.8dp"
                android:background="@drawable/bg_csm_bottom_stroke"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="56dp"/>
            <LinearLayout
                android:id="@+id/emailLogin"
                android:layout_marginTop="1.5dp"
                android:layout_marginHorizontal="1.5dp"
                android:background="@drawable/btn_csm_email_login"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="55dp">

                <ImageView
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_csm_small_email"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="continue with Email"
                    android:layout_marginLeft="22dp"
                    android:textSize="20dp"
                    android:textAllCaps="true"
                    android:fontFamily="@font/main_one"
                    android:textColor="@color/white"/>

            </LinearLayout>





        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rFb"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60.7dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_csm_btn_white"
            android:focusable="true">

            <LinearLayout
                android:layout_marginTop="2.5dp"
                android:layout_marginHorizontal="1.8dp"
                android:background="@drawable/bg_csm_bottom_stroke_fb"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="56dp"/>
            <LinearLayout
                android:id="@+id/fb_btn"
                android:layout_marginTop="1.5dp"
                android:layout_marginHorizontal="1.5dp"
                android:background="@drawable/btn_csm_fb"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="55dp">

                <ImageView
                    android:layout_marginLeft="40dp"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_csm_fb"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="continue with facebook"
                    android:layout_marginLeft="22dp"
                    android:textSize="20dp"
                    android:textAllCaps="true"
                    android:fontFamily="@font/main_one"
                    android:textColor="@color/white"/>

            </LinearLayout>





        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rGoogle"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60.7dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_csm_bottom_stroke_google"
            android:focusable="true">

            <LinearLayout
                android:layout_marginTop="2.5dp"
                android:layout_marginHorizontal="1.8dp"
                android:background="@drawable/bg_csm_bottom_stroke_google"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="56dp"/>
            <LinearLayout
                android:id="@+id/google"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="@drawable/btn_csm_google"
                android:focusable="true">
                <ImageView
                    android:layout_marginLeft="40dp"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/ic_csm_google"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="continue with google"
                    android:layout_marginLeft="25dp"
                    android:textSize="20dp"
                    android:textAllCaps="true"
                    android:fontFamily="@font/main_one"
                    android:textColor="#4A4A4A"/>


            </LinearLayout>





        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/main_one"
            android:text="By Continuing , You Agree To Our"
            android:textColor="@color/white"
            android:textSize="17dp" />


        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="18dp"
            android:fontFamily="@font/main_one"
            android:linksClickable="true"
            android:text="Terms And Conditions And Privacy Policy"
            android:textColor="@color/white"
            android:textSize="12dp" />


    </LinearLayout>


</RelativeLayout>