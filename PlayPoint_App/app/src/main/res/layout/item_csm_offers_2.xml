<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="12dp"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginTop="10dp"
    android:layout_weight="1.6"
    app:cardBackgroundColor="#5E4B97"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:id="@+id/click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_csm_home_btn">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_csm_offer_open"
            android:layout_alignParentRight="true"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/img_card"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="5.5dp"
            android:layout_centerVertical="true"
            app:cardCornerRadius="7dp"
            app:cardBackgroundColor="#00FFFFFF"
            android:outlineAmbientShadowColor="#00FFFFFF"
            android:outlineSpotShadowColor="#00FFFFFF">

            <ImageView
                android:id="@+id/image"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/img_card"
            android:orientation="vertical">

            <TextView
                android:layout_marginRight="4dp"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/main_one"
                android:text="csm king game"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/main_two"
                android:maxLines="1"
                android:text="Complete offer and earn offer and earn"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="9dp" />

            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_marginTop="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <RelativeLayout
                    android:id="@+id/att"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_toEndOf="@+id/bar">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_offer_lable">

                        <TextView
                            android:textAllCaps="true"
                            android:layout_marginTop="-1.3dp"
                            android:id="@+id/cat"
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:fontFamily="@font/main_two"
                            android:text="ANDROID"
                            android:textColor="@color/white"
                            android:textSize="10dp" />


                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp">

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:id="@+id/coinbar"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_offer_lable">

                        <TextView
                            android:layout_marginTop="-3dp"
                            android:id="@+id/coins"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="17dp"
                            android:fontFamily="@font/main_two"
                            android:text="750"
                            android:textColor="@color/white"
                            android:textSize="11dp" />


                    </LinearLayout>


                    <ImageView
                        android:id="@+id/img_coin"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/csm_coin" />


                </RelativeLayout>


            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>