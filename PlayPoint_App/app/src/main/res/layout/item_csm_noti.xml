<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="#5A4597"
    android:layout_marginHorizontal="10dp"
    android:paddingVertical="0dp">

    <RelativeLayout
        android:id="@+id/click"
        android:background="@drawable/btn_csm_home_btn_2nd"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_csm_noti"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CSM app notification"
                android:fontFamily="@font/main_one"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <TextView
                android:layout_marginTop="-3dp"
                android:layout_marginRight="80dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="csm payment request update test paayment notification"
                android:fontFamily="@font/main_two"
                android:textColor="@color/white"
                android:textSize="10sp"/>

            <TextView
                android:layout_marginTop="-3dp"
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20-5-2002"
                android:fontFamily="@font/main_two"
                android:textColor="@color/white"
                android:textSize="9sp"/>
        </LinearLayout>



        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-50dp">

            <ImageView
                android:layout_marginBottom="-20dp"
                android:layout_marginTop="-20dp"
                android:layout_width="119dp"
                android:layout_height="119dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_csm_ovel_14" />

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center">



                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-1dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/main_one"
                    android:text="View"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

            </LinearLayout>



        </RelativeLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>