<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DE1D1241"
    android:clickable="true"
    tools:context=".csm.DialogFrag.DialogNoti"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/pop"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_csm_noti"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FCD40D"
            android:fontFamily="@font/main_one"
            android:textSize="21dp"
            android:textAllCaps="true"
            android:text="notification"
            android:layout_marginTop="20dp"/>


        <TextView
            android:id="@+id/title"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/main_one"
            android:textSize="16dp"
            android:text="CSM app notification"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/sub"
            android:layout_marginBottom="24dp"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/main_two"
            android:textSize="12dp"
            android:text="Your payment request will be sent to you within few hours Thank you for using our app."
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_csm_close_dialog"
        android:layout_below="@+id/pop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

</RelativeLayout>