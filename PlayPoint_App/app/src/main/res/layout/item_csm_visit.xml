<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1.6"
        app:cardBackgroundColor="#5E4B97"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:id="@+id/click"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_csm_home_btn">


            <ImageView
                android:id="@+id/gift"
                android:layout_width="60dp"
                android:layout_marginLeft="10dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                app:riv_corner_radius="5dp"
                android:src="@drawable/ic_csm_visit" />

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@id/gift"
                android:orientation="vertical">

                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/main_one"
                    android:text="codesellmrket site"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="20dp" />


                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/coinbar"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="-15dp"
                            android:layout_toEndOf="@+id/img_coin"
                            android:background="@drawable/bg_csm_game_coinbar">

                            <TextView
                                android:id="@+id/coins"
                                android:layout_marginTop="-6dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="18dp"
                                android:layout_marginRight="7dp"
                                android:fontFamily="@font/main_two"
                                android:text="500"
                                android:textColor="@color/white"
                                android:textSize="11dp" />


                        </RelativeLayout>


                        <ImageView
                            android:id="@+id/img_coin"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/csm_coin" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical">


                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/ic_csm_clock" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="-0dp"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/main_two"
                            android:text="8 MIN"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_marginRight="-38dp"
                    android:layout_marginTop="-35dp"
                    android:layout_marginBottom="-10sp"
                    android:layout_width="124dp"
                    android:layout_height="119dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_csm_ovel_14" />





            </RelativeLayout>


            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="-5dp"
                android:layout_alignParentRight="true">

                <RelativeLayout
                    android:id="@+id/open"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="-15dp"
                        android:layout_toEndOf="@+id/img_coinn"
                        android:background="@drawable/bg_csm_game_coinbar">

                        <TextView
                            android:layout_marginTop="-6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="7dp"
                            android:fontFamily="@font/main_two"
                            android:text="OPEN"
                            android:textColor="@color/white"
                            android:textSize="11dp" />


                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/img_coinn"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/csm_coin" />


                </RelativeLayout>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/status"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_csm_done"/>




            </LinearLayout>


            <LinearLayout
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_csm_ovel_14"
                android:layout_marginLeft="-25dp"
                android:layout_marginTop="-15dp"
                android:layout_marginBottom="-15dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>